{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "allowJs": true,
        "lib": [
            "DOM",
            "ES2022"
        ]
    },
    "include": [
        "."
    ],
    "exclude": [
        "dev",
        "assets",
        "static",
        "node_modules",
        "deploy",
        "cache",
        "languages",
        ".editor"
    ]
}